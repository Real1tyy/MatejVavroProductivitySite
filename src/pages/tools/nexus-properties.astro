---
import BaseLayout from '../../layouts/BaseLayout.astro';

const githubRepo = 'Real1tyy/Nexus-Properties';
const videoId = 'Im0SfuBHamo';
const docsUrl = 'https://real1tyy.github.io/Nexus-Properties/';
const githubUrl = `https://github.com/${githubRepo}`;
const youtubeUrl = 'https://www.youtube.com/watch?v=Im0SfuBHamo';
---

<BaseLayout title="Nexus Properties — Matej Vavro Productivity">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 max-w-5xl">
		<main>
			<!-- Badges -->
			<div class="flex flex-wrap gap-2 mb-6 justify-center">
				<img src={`https://img.shields.io/github/downloads/${githubRepo}/total?label=Downloads&style=for-the-badge`} alt="Downloads" />
				<img src={`https://img.shields.io/github/v/release/${githubRepo}?label=Latest%20Release&style=for-the-badge`} alt="Latest Release" />
				<img src={`https://img.shields.io/github/stars/${githubRepo}?style=for-the-badge`} alt="Stars" />
				<img src={`https://img.shields.io/github/license/${githubRepo}?style=for-the-badge`} alt="License" />
				<img src="https://img.shields.io/badge/obsidian-plugin-purple.svg?style=for-the-badge" alt="Obsidian" />
			</div>

		<h1 class="text-4xl md:text-5xl font-bold text-(--color-text-purple) mb-4 text-center">Nexus Properties</h1>
		<p class="text-lg text-(--color-text-muted) mb-8 text-center max-w-3xl mx-auto">
				Automated property management and interactive relationship visualization for Obsidian — bidirectional sync, graph views, and intelligent property inheritance for power users who want structured knowledge networks.
			</p>

		<!-- Video Embed -->
		{videoId && videoId !== 'VIDEO_ID_HERE' && (
			<div class="mb-12">
				<a href={youtubeUrl} target="_blank" rel="noopener noreferrer" class="text-2xl font-semibold text-(--color-primary) hover:text-(--color-primary-light) mb-4 inline-block transition-colors">
					Video Tutorial →
				</a>
				<div class="aspect-video rounded-lg overflow-hidden">
					<iframe
						width="100%"
						height="100%"
						src={`https://www.youtube.com/embed/${videoId}`}
						title="Nexus Properties - Full Tutorial"
						frameborder="0"
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
						allowfullscreen
						class="w-full h-full"
					></iframe>
				</div>
			</div>
		)}

		<!-- Documentation Embed -->
		<div class="mb-12">
			<a href={docsUrl} target="_blank" rel="noopener noreferrer" class="text-2xl font-semibold text-(--color-primary) hover:text-(--color-primary-light) mb-4 inline-block transition-colors">
				Documentation →
			</a>
			<div class="border border-(--color-primary) rounded-lg overflow-hidden" style="height: 800px;">
				<iframe
					width="100%"
					height="100%"
					src={docsUrl}
					title="Nexus Properties Documentation"
					frameborder="0"
					class="w-full h-full"
				></iframe>
			</div>
		</div>

		<!-- Action Buttons -->
		<div class="flex flex-wrap gap-4 justify-center">
			<a
				href={githubUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="px-6 py-3 bg-(--color-primary) text-white font-semibold rounded-lg hover:bg-(--color-primary-light) transition-colors"
			>
				GitHub
			</a>
			<a
				href={docsUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="px-6 py-3 bg-(--color-tertiary) text-white font-semibold rounded-lg hover:bg-(--color-tertiary-light) transition-colors"
			>
				Documentation
			</a>
			<a
				href={youtubeUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="px-6 py-3 bg-(--color-secondary) text-white font-semibold rounded-lg hover:bg-(--color-secondary-light) transition-colors"
			>
				YouTube
			</a>
		</div>
		</main>
	</div>
</BaseLayout>

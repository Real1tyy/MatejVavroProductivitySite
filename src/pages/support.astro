---
import BaseLayout from '../layouts/BaseLayout.astro';

const supportOptions = [
	{
		name: 'Ko-fi',
		description: 'One-time support via Ko-fi',
		url: 'https://ko-fi.com/matejvavro',
		buttonText: 'Support on Ko-fi',
	},
	{
		name: 'GitHub Sponsors',
		description: 'Become a monthly sponsor on GitHub',
		url: 'https://github.com/sponsors/Real1tyy',
		buttonText: 'Become a Sponsor',
	},
	{
		name: 'PayPal',
		description: 'One-time donation via PayPal',
		url: 'https://paypal.me/Real1tyy',
		buttonText: 'Donate via PayPal',
	},
	{
		name: 'Crypto',
		description: 'Support via cryptocurrency (lowest fees)',
		url: 'https://nowpayments.io/donation/matejvavro',
		buttonText: 'Donate via NOWPayments',
	},
];

const cardanoAddress = 'addr1q9fqww6zfe28lsh2fzlel0x84prye80pwvlh2pj2t52w278npqzfwwkdj0wdnqfdy9u6feyzmcjqvscdxn0fd3hgqmesp82dgv';
---

<BaseLayout title="Support â€” Matej Vavro Productivity">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 max-w-4xl">
		<main>
			<h1 class="text-4xl md:text-5xl font-bold text-(--color-text-purple) mb-4 text-center">Support My Work</h1>
			<p class="text-lg text-(--color-text-muted) mb-12 text-center max-w-2xl mx-auto">
				If you enjoy my plugins or my content, your support helps me continue building better tools for the community.
			</p>

			<!-- Support Options List -->
			<div class="bg-(--color-surface-purple) border border-(--color-primary) rounded-xl overflow-hidden mb-8">
				{supportOptions.map((option, index) => (
					<div class={`flex flex-col md:flex-row justify-between items-start md:items-center p-6 gap-4 hover:bg-(--color-surface-elevated) transition-colors ${index !== supportOptions.length - 1 ? 'border-b border-(--color-primary)' : ''}`}>
						<div class="flex-1">
							<h3 class="text-xl font-semibold text-white mb-2">{option.name}</h3>
							<p class="text-(--color-text-muted) text-sm">{option.description}</p>
						</div>
						<a
							href={option.url}
							target="_blank"
							rel="noopener noreferrer"
							class="px-6 py-3 bg-(--color-primary) text-white font-semibold rounded-lg hover:bg-(--color-primary-light) transition-colors whitespace-nowrap"
						>
							{option.buttonText}
						</a>
					</div>
				))}
			</div>

			<!-- Direct Cardano Support -->
			<div class="bg-(--color-surface-purple) border border-(--color-primary) rounded-xl p-6 mb-8">
				<h4 class="text-xl font-semibold text-white mb-3">Direct Cardano (ADA) Support</h4>
				<p class="text-sm text-(--color-text-muted) mb-4">Lowest fees option:</p>
				<div class="bg-(--color-surface-elevated) border border-(--color-primary) rounded-lg p-4">
					<code class="text-xs text-(--color-text-muted) break-all font-mono">{cardanoAddress}</code>
				</div>
			</div>

			<!-- Contact Section -->
			<div class="bg-(--color-surface-purple) border border-(--color-primary) rounded-xl p-6 text-center">
				<h4 class="text-xl font-semibold text-white mb-3">Contact</h4>
				<p class="text-sm text-(--color-text-muted) mb-3">Have questions or need help?</p>
				<a
					href="mailto:hello@matejvavroproductivity.com"
					class="text-(--color-primary) hover:text-(--color-primary-light) transition-colors font-semibold"
				>
					hello@matejvavroproductivity.com
				</a>
			</div>
		</main>
	</div>
</BaseLayout>

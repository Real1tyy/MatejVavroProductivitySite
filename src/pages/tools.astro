---
import BaseLayout from '../layouts/BaseLayout.astro';
import type { Tool } from '../utils/types';

const tools: Tool[] = [
	{
		name: 'Prisma Calendar',
		description: 'An advanced calendar system for Obsidian that provides powerful scheduling, planning, and time management capabilities. Organize your life with a calendar that integrates seamlessly with your knowledge base.',
		githubUrl: 'https://github.com/Real1tyy/Prisma-Calendar',
		docsUrl: 'https://github.com/Real1tyy/Prisma-Calendar',
		youtubeUrl: 'https://www.youtube.com/@MatejVavroProductivity',
	},
	{
		name: 'Periodix Planner',
		description: 'A periodic planning and goal tracking system that helps you maintain focus and direction. Build sustainable workflows that prioritize what matters and keep you moving toward your objectives.',
		githubUrl: 'https://github.com/Real1tyy/Periodix-Planner',
		docsUrl: 'https://github.com/Real1tyy/Periodix-Planner',
		youtubeUrl: 'https://www.youtube.com/@MatejVavroProductivity',
	},
	{
		name: 'Nexus Properties',
		description: 'A property management system for organizing and connecting your knowledge base. Create structure and relationships in your notes that enable powerful automation and efficient workflows.',
		githubUrl: 'https://github.com/Real1tyy/Nexus-Properties',
		docsUrl: 'https://github.com/Real1tyy/Nexus-Properties',
		youtubeUrl: 'https://www.youtube.com/@MatejVavroProductivity',
	},
];
---

<BaseLayout title="Tools â€” Matej Vavro">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 max-w-5xl">
		<main>
			<h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Real1ty Obsidian Plugin Ecosystem</h1>
			<p class="text-lg text-[#a0a0a0] mb-12 max-w-3xl">
				Advanced productivity tools designed to work together, helping you build clarity, structure, and direction in your Second Brain.
			</p>

			<div class="grid gap-8 md:grid-cols-1">
				{tools.map((tool) => (
					<div class="bg-[#1a1a1a] border border-[#333333] rounded-xl p-8 hover:border-[#444444] transition-colors">
						<h2 class="text-2xl md:text-3xl font-semibold text-white mb-4">{tool.name}</h2>
						<p class="text-lg text-[#a0a0a0] leading-relaxed mb-6">{tool.description}</p>
						<div class="flex flex-wrap gap-4">
							<a
								href={tool.githubUrl}
								target="_blank"
								rel="noopener noreferrer"
								class="px-6 py-3 bg-white text-black font-semibold rounded-lg hover:bg-[#e5e5e5] transition-colors"
							>
								GitHub
							</a>
							{tool.docsUrl && (
								<a
									href={tool.docsUrl}
									target="_blank"
									rel="noopener noreferrer"
									class="px-6 py-3 bg-transparent border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-black transition-colors"
								>
									Docs
								</a>
							)}
							{tool.youtubeUrl && (
								<a
									href={tool.youtubeUrl}
									target="_blank"
									rel="noopener noreferrer"
									class="px-6 py-3 bg-transparent border-2 border-[#ff0000] text-[#ff0000] font-semibold rounded-lg hover:bg-[#ff0000] hover:text-white transition-colors"
								>
									YouTube
								</a>
							)}
						</div>
					</div>
				))}
			</div>
		</main>
	</div>
</BaseLayout>

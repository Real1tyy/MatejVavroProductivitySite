---
import BaseLayout from '../layouts/BaseLayout.astro';
import type { Tool } from '../utils/types';

const obsidianTools: Tool[] = [
	{
		name: 'Prisma Calendar',
		slug: 'prisma-calendar',
		description: 'An advanced calendar system for Obsidian that provides powerful scheduling, planning, and time management capabilities. Organize your life with a calendar that integrates seamlessly with your knowledge base.',
		githubUrl: 'https://github.com/Real1tyy/Prisma-Calendar',
		docsUrl: 'https://real1tyy.github.io/Prisma-Calendar/',
		youtubeUrl: 'https://www.youtube.com/watch?v=aULuB6petbU',
		videoId: 'aULuB6petbU',
		githubRepo: 'Real1tyy/Prisma-Calendar',
	},
	{
		name: 'Periodix Planner',
		slug: 'periodix-planner',
		description: 'A periodic planning and goal tracking system that helps you maintain focus and direction. Build sustainable workflows that prioritize what matters and keep you moving toward your objectives.',
		githubUrl: 'https://github.com/Real1tyy/Periodix-Planner',
		docsUrl: 'https://real1tyy.github.io/Periodix-Planner/',
		youtubeUrl: 'https://www.youtube.com/watch?v=bIVNj6fkTc8',
		videoId: 'bIVNj6fkTc8',
		githubRepo: 'Real1tyy/Periodix-Planner',
	},
	{
		name: 'Nexus Properties',
		slug: 'nexus-properties',
		description: 'A property management system for organizing and connecting your knowledge base. Create structure and relationships in your notes that enable powerful automation and efficient workflows.',
		githubUrl: 'https://github.com/Real1tyy/Nexus-Properties',
		docsUrl: 'https://real1tyy.github.io/Nexus-Properties/',
		youtubeUrl: 'https://www.youtube.com/watch?v=Im0SfuBHamo',
		videoId: 'Im0SfuBHamo',
		githubRepo: 'Real1tyy/Nexus-Properties',
	},
	{
		name: 'Fusion Goals',
		slug: 'fusion-goals',
		description: 'Connect Goals with Tasks and track deadlines with timeline views. Uses Kanban workflow with graph and bases visualization. (Coming Soon)',
		githubUrl: 'https://github.com/Real1tyy/Fusion-Goals',
		githubRepo: 'Real1tyy/Fusion-Goals',
	},
	{
		name: 'Bases Improvements',
		slug: 'bases-improvements',
		description: 'Adds a search bar on top of Obsidian\'s bases view for quick filtering and navigation. Essential enhancement for working with large knowledge bases.',
		githubUrl: 'https://github.com/Real1tyy/BasesImprovements',
		docsUrl: 'https://real1tyy.github.io/BasesImprovements/',
		githubRepo: 'Real1tyy/BasesImprovements',
	},
];

const remarkableTools = [
	{
		name: 'Remarkable ↔ Obsidian Bidirectional Sync',
		slug: 'remarkable-sync',
		description: 'Seamlessly sync your Remarkable notes and Obsidian vault in both directions. Journal on Remarkable, read in Obsidian. Write in Obsidian, read on Remarkable. (Coming Soon)',
		comingSoon: true,
	},
	{
		name: 'Remarkable Periodic Notes Generation',
		slug: 'remarkable-periodic-notes',
		description: 'Automatically generate daily, weekly, monthly, quarterly, and yearly notes directly in your Remarkable tablet with intelligent tagging for easy navigation. (Coming Soon)',
		comingSoon: true,
	},
];
---

<BaseLayout title="Tools — Matej Vavro Productivity">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 max-w-5xl">
		<main>
			<h1 class="text-4xl md:text-5xl font-bold text-(--color-text-purple) mb-4 reveal">All Tools</h1>
			<p class="text-lg text-(--color-text-muted) mb-12 max-w-3xl reveal">
				Advanced productivity tools designed to work together, helping you build clarity, structure, and direction in your workflow.
			</p>

			<!-- Obsidian Plugin Ecosystem -->
			<section class="mb-16">
				<h2 class="text-3xl font-semibold text-(--color-primary) mb-8 reveal">Obsidian Plugin Ecosystem</h2>
				<div class="grid gap-8 md:grid-cols-1">
					{obsidianTools.map((tool) => (
						<div class="bg-(--color-surface-purple) border border-(--color-border-purple) rounded-xl p-8 hover:border-(--color-primary) transition-all duration-300 reveal hover:shadow-lg hover:shadow-(--color-primary)/20">
							<a href={`/tools/${tool.slug}`} class="block">
								<h3 class="text-2xl md:text-3xl font-semibold text-(--color-text-purple) mb-4 hover:text-(--color-primary-lighter) transition-colors">{tool.name}</h3>
								<p class="text-lg text-(--color-text-muted) leading-relaxed mb-6">{tool.description}</p>
							</a>
							<div class="flex flex-wrap gap-4">
								{tool.githubUrl && (
									<a
										href={tool.githubUrl}
										target="_blank"
										rel="noopener noreferrer"
										class="px-6 py-3 bg-(--color-primary) text-white font-semibold rounded-lg transition-colors inline-block btn-lift"
									>
										GitHub
									</a>
								)}
								{tool.docsUrl && (
									<a
										href={tool.docsUrl}
										target="_blank"
										rel="noopener noreferrer"
										class="px-6 py-3 bg-transparent border-2 border-(--color-tertiary) text-(--color-tertiary) font-semibold rounded-lg hover:bg-(--color-tertiary) hover:text-white transition-all duration-200 inline-block hover:scale-105"
									>
										Docs
									</a>
								)}
								{tool.youtubeUrl && (
									<a
										href={tool.youtubeUrl}
										target="_blank"
										rel="noopener noreferrer"
										class="px-6 py-3 bg-transparent border-2 border-(--color-secondary) text-(--color-secondary) font-semibold rounded-lg hover:bg-(--color-secondary) hover:text-white transition-all duration-200 inline-block hover:scale-105"
									>
										YouTube
									</a>
								)}
							</div>
						</div>
					))}
				</div>
			</section>

			<!-- Remarkable Ecosystem -->
			<section>
				<h2 class="text-3xl font-semibold text-(--color-primary) mb-8 reveal">Remarkable Ecosystem</h2>
				<div class="grid gap-8 md:grid-cols-1">
					{remarkableTools.map((tool) => (
						<div class="bg-(--color-surface-purple) border border-(--color-border-purple) rounded-xl p-8 hover:border-(--color-primary) transition-all duration-300 reveal hover:shadow-lg hover:shadow-(--color-primary)/20">
							<a href={`/tools/${tool.slug}`} class="block">
								<h3 class="text-2xl md:text-3xl font-semibold text-(--color-text-purple) mb-4 hover:text-(--color-primary-lighter) transition-colors">{tool.name}</h3>
								<p class="text-lg text-(--color-text-muted) leading-relaxed mb-6">{tool.description}</p>
							</a>
							{tool.comingSoon && (
								<div class="flex flex-wrap gap-4">
									<a
										href={`/tools/${tool.slug}`}
										class="px-6 py-3 bg-(--color-primary) text-white font-semibold rounded-lg transition-colors inline-block btn-lift"
									>
										Learn More
									</a>
								</div>
							)}
						</div>
					))}
				</div>
			</section>
		</main>
	</div>
</BaseLayout>

---
interface Props {
	text: string;
	label?: string;
	successMessage?: string;
}

const { text, label = 'Copy', successMessage = 'Copied!' } = Astro.props;
---

<button
	class="copy-btn px-4 py-2 bg-(--color-primary) text-white font-semibold rounded-lg hover:bg-(--color-primary-light) transition-all duration-200"
	data-copy-text={text}
	data-success-message={successMessage}
	aria-label={`Copy ${label}`}
>
	<span class="flex items-center gap-2">
		<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
		</svg>
		<span class="button-text">{label}</span>
	</span>
</button>

<script>
	import { copyToClipboard } from '../utils/toast';

	function initCopyButtons() {
		const copyButtons = document.querySelectorAll('.copy-btn');

		copyButtons.forEach((button) => {
			button.addEventListener('click', () => {
				const text = button.getAttribute('data-copy-text') || '';
				const successMessage = button.getAttribute('data-success-message') || 'Copied!';

				// Add copied class for visual feedback
				button.classList.add('copied');

				// Copy to clipboard
				copyToClipboard(text, successMessage);

				// Remove copied class after animation
				setTimeout(() => {
					button.classList.remove('copied');
				}, 300);
			});
		});
	}

	// Initialize on page load
	initCopyButtons();

	// Re-initialize after Astro view transitions
	document.addEventListener('astro:page-load', initCopyButtons);
</script>
